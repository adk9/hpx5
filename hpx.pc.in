prefix=@prefix@
exec_prefix=@exec_prefix@
libdir=@libdir@
includedir=@includedir@

Name: @PACKAGE_NAME@
Description: The HPX-5 runtime system.
URL: https://gitlab.crest.iu.edu/extreme/hpx
Version: @PACKAGE_VERSION@
Requires: libffi
Cflags: -I${includedir}
Libs: -L${libdir} -lhpx @HPX_JEMALLOC_LOCAL_LIBS@
Libs.private: @PMI_LIBS@ @HUGETLBFS_LIBS@ @MPI_LIBS@ @PTHREAD_LIBS@ @PE_ENV_LIBS@ @PTHREAD_CFLAGS@ -lsync @HPX_JEMALLOC_LIBS@
Requires.private: @HPX_PRIVATE_PKGS@

