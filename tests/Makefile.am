noinst_bin_PROGRAMS = photontest
noinst_bindir       = $(abs_top_builddir)/tests
TESTS               = photontest
check_PROGRAMS      = photontest
photontest_SOURCES  = photonmain.c \
                      photoninit.c \
                      kernel.c \
                      photon_test.c \
                      photon_data_movement.c \
                      photon_message_passing.c \
                      photon_pingpong.c \
                      photon_communication.c \
                      photon_buffers_remote.c \
                      photon_buffers_private.c \
                      photon_rendezvous.c \
                      photon_one_sided_put.c \
                      photon_one_sided_get.c \
                      photon_rdma_with_completion.c \
                      photon_test_put_wc.c \
                      photon_os_get_bench.c 

photontest_LDADD    = $(top_builddir)/src/libphoton.la -lm -lcrypto -lcheck @CHECK_LIBS@ @THREAD_LIBS@ @UGNI_LIBS@ @VERBS_LIBS@ @MPI_LIBS@ -lrt
photontest_CFLAGS   = @CFLAGS@ @CHECK_CFLAGS@ @MPI_CFLAGS@ -I$(top_srcdir)/include
photontest_CFLAGS  += -g -Wunused -Wunused-function -Wunused-label -Wunused-parameter -Wunused-value -Wunused-variable -Wunused-but-set-parameter -Wunused-but-set-variable -Wno-unused-result  
